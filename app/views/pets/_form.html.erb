<%= form_for @pet, :html => {id: 'petForm'} do |f| %>

  <% if @pet.errors.any? %>

    <div id="error_explanation">
      <h2>
        There were some errors that prohibited this post from being saved:
      </h2>

      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>

      </ul>
  <% end %>
    </div>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label :species %>
  <!--<%= f.text_field :species %>-->
  <%= f.select :species, options_for_select(['dog','cat'])%>
  <br><br>


  <%= f.submit %>

<% end %>
