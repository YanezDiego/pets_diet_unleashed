<h1>Welcome <%= @current_user.name %>!</h1>

<% if !@current_user.pets.empty? %>
   <h3>Here are your pet's</h3>
   <di id="dog">
   <p>Number of Dogs Created: <%= @current_user.pets.dog_count%>
  </di>
  <div id="cat">
   <p>Number of Cats Created: <%= @current_user.pets.cat_count %></p>
 </div>

  <!-- <% @current_user.pets.dog.each do |dog| %>
  <%= dog.name %>
  <% end %> -->


   <ul>
    <% @current_user.pets.each do |pet| %>
      <li>
        <%= link_to pet.name, pet_path(pet.id)  %> - <%= pet.species %> <button class="js-moreInfo" data-id="<%= pet.id %>">More Info..</button></p>
        <div class="diet"></div>
         <%= link_to "Delete", pet, method: :delete, data: { confirm: "Really?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Want to add some friend of yours?</p>
  <p><%= link_to 'Add Pet', new_pet_path %></p>
<% end %>
