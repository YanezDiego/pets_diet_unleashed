
<!-- Displays The Current Users Pet-->
<h3><%= @pet.name %></h3>
<h3><%= @pet.species %></h3>

<!-- Displays The Current Users Pets Diet-->
<% @pet.diets.each do |diet| %>
  <p>Diet Name: <%= diet.name %> | Brand: <%= diet.food.brand %>
    <%= link_to 'Update Diet', edit_pet_diet_path(@pet, diet) %>
  </p>
<% end %>

<!-- Delete and Edit Link-->
<%= link_to 'Add A Diet', new_pet_diet_path(@pet)%>

<%= link_to 'Edit Pet', edit_pet_path %>
<%= link_to "Delete Pet", @pet, method: :delete, data: { confirm: "Really?" } %>
