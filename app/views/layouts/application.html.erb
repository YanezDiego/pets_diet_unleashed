<!DOCTYPE html>
<html>
  <head>
    <title>PetsDietUnleashed</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if @current_user %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active"><%= link_to 'Home', pets_path, class: "nav-link" %></li>
        <li class="nav-item active"><%= link_to 'Add Pet', new_pet_path, class: "nav-link"%></li>
        <li class="nav-item active"><%= link_to 'Profile', user_path(@current_user.id), class:"nav-link" %></li>
        <li class="nav-item active"><%= link_to 'Log Out', logout_path, class:"nav-link" %></li>
      </ul>
    <% end %>
    </div>
  </nav>

    <%= yield %>


  </body>

</html>
