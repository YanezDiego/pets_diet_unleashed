
<h2>Please Create A Profile</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %>
  <br><br>

  <%= f.label :name, 'Your Name'%><br>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label :email %><br>
  <%= f.email_field :email %>
  <br><br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <br><br>

  <%= f.submit "Sign Up" %>

<% end %>
